<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddEventActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_login"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fifth"
        tools:ignore="MissingConstraints">
    </ImageView>

    <TextView
        android:id="@+id/header_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/comfortaa"
        android:text="New event"
        android:textAlignment="center"
        android:textColor="@color/emerald"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <EditText
        android:id="@+id/eventName"
        android:layout_width="211dp"
        android:layout_height="51dp"
        android:background="@drawable/bg"
        android:drawableLeft="@drawable/event_note"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Event name"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:textSize="16sp"
        android:fontFamily="@font/comfortaa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_login"
        app:layout_constraintVertical_bias="0.18">

    </EditText>

    <Button
        android:id="@+id/eventDate"
        android:layout_width="211dp"
        android:layout_height="51dp"
        android:background="@drawable/bg"
        android:drawableLeft="@drawable/calendar"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="Event date"
        android:paddingLeft="15dp"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:textSize="16sp"
        android:textAlignment="textStart"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/eventName"
        app:layout_constraintVertical_bias="0.182">

    </Button>

    <Button
        android:id="@+id/eventHour"
        android:layout_width="211dp"
        android:layout_height="51dp"
        android:background="@drawable/bg"
        android:drawableLeft="@drawable/time"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="Event hour"
        android:paddingLeft="15dp"
        android:textAlignment="textStart"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/eventDate"
        app:layout_constraintVertical_bias="0.23">

    </Button>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/gradient_btn"
        android:fontFamily="@font/comfortaa"
        android:text="Add event"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/eventHour"
        app:layout_constraintVertical_bias="0.377" />


</androidx.constraintlayout.widget.ConstraintLayout>